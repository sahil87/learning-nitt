#chattr +i $USRHOME/$2/$3/.bash_logout
#touch /var/tmp/log/$3
#chown $3 /var/tmp/log/$3
#chmod 600 /var/tmp/log/$3
#chattr +a /var/tmp/log/$3
/usr/bin/smbadduser $3:$3 
/usr/bin/smbpasswd -s $3 < ttpwd1
echo "........................................"
echo "Password is : " ` more test1`
